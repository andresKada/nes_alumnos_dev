<h1>Catálogo de Usuarios</h1>

<% if @users.size > 0 %>
  <table>
    <thead>
      <tr>
        <th>Nombre de Usuario</th>
        <th>Correo Electronico</th>
        <th>Rol</th>
        <th colspan="3">Opciones</th>
      </tr>
    </thead>
    <% for user in @users %>
      <tr>
        <td><%= user.login %></td>
        <td><%= user.email %></td>
        <td><%= user.role.name %> </td>
        <td><%= link_to "Editar", edit_user_path(user) %></td>
        <td><%= link_to "Eliminar", user, :confirm => "¿Está seguro de eliminar al Usuario?", :method => :delete %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <br/><br/><h3>Catálogo Usuarios vacío</h3>
<% end %>
<br/>
<%= link_to "Nuevo Usuario", new_user_path %>
<br/><br/>
<%= link_to "Ir a Página Principal", "/" %>
